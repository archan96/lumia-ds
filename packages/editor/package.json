        "dev": "tsup --watch",
        "test": "vitest run",
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "type-check": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/prosemirror-model": "^1.17.0",
        "@types/prosemirror-state": "^1.4.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vitest": "^2.1.9"
    }
}