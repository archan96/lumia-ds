        "@types/prosemirror-state": "^1.4.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitest/coverage-v8": "^2.1.9",
        "axe-core": "^4.11.0",
        "happy-dom": "^20.0.10",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vitest": "^2.1.9",
        "vitest-axe": "^0.1.0"
