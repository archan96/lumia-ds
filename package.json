{
  "name": "lumia-ds-monorepo",
  "private": true,
  "description": "Lumia UI design-system library monorepo",
  "scripts": {
    "test": "pnpm -r --if-present test -- --coverage",
    "lint": "eslint \"packages/**/*.{ts,tsx,js,jsx}\" --cache",
    "type-check": "tsc --build",
    "build": "pnpm -r build",
    "icons:import": "node packages/cli/bin/lumia-icon-import.js packages/icons/raw packages/icons",
    "coverage:all": "pnpm --filter @lumia/components test && pnpm --filter @lumia/runtime exec vitest run --coverage && pnpm --filter @lumia/forms exec vitest run --coverage && pnpm --filter @lumia/layout exec vitest run --coverage && pnpm --filter @lumia/theme test && pnpm --filter @lumia/tokens test && pnpm --filter @lumia/icons test",
    "storybook": "storybook dev -p 6006 -c .storybook",
    "storybook:build": "storybook build -c .storybook"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "flat-cache": "^4.0.1"
    }
  },
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@lumia/theme": "workspace:*",
    "@lumia/tokens": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "semver": "^7.7.3",
    "storybook": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-a11y": "^8.6.14",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "unplugin": "^1.16.1"
  }
}
